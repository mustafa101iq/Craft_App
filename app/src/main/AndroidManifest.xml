<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="org.codeforiraq.craft">

    <uses-permission android:name="android.permission.CALL_PHONE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/app_icon2"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".activities.MainActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activities.InfoPage"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activities.UserProfilePage"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activities.LogInPage"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activities.RegisterPage"
            android:screenOrientation="portrait" />
        <activity android:name=".activities.SplashScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activities.InfoPageYourSkill" />
        <activity android:name=".activities.ModifyInfoPage" />
        <activity android:name=".activities.AboutPage"></activity>
    </application>

</manifest>