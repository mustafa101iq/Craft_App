<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.RegisterPage">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"

        >

        <android.support.design.widget.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:theme="@style/AppTheme.AppBarOverlay">

            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbarHome"
                android:layout_width="match_parent"
                android:layout_height="160dp"
                android:background="?attr/colorPrimary"
                android:elevation="5dp"
                app:popupTheme="@style/AppTheme.PopupOverlay">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center">

                    <ImageView
                        android:id="@+id/btn_profile"
                        android:layout_width="115dp"
                        android:layout_height="115dp"
                        android:src="@mipmap/user_profile_img"
                        tools:ignore="ContentDescription" />

                </LinearLayout>


            </android.support.v7.widget.Toolbar>

        </android.support.design.widget.AppBarLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="30dp">

                <EditText
                    android:id="@+id/edt_email_reg"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/cover_txt_more"
                    android:hint="الايميل"
                    android:inputType="textEmailAddress"
                    android:padding="12dp"
                    android:textColorHint="@color/text_color" />

                <EditText
                    android:id="@+id/edt_password_reg"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/cover_txt_more"
                    android:hint="الباسورد"
                    android:inputType="textPassword"
                    android:padding="12dp"
                    android:textColorHint="@color/text_color"
                    />

                <Button
                    android:id="@+id/btn_register"
                    android:layout_width="293dp"
                    android:layout_height="48dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="40dp"
                    android:background="@color/text_color"
                    android:text="تسجيل"
                    android:textColor="#ffffff"
                    android:textSize="25sp"

                    />

            </LinearLayout>

        </ScrollView>

    </LinearLayout>
</android.support.constraint.ConstraintLayout>